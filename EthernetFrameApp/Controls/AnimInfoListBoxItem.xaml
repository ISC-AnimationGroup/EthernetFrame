<UserControl x:Class="EthernetFrameApp.Controls.AnimInfoListBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EthernetFrameApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid x:Name="g_header">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="textBlock1" Grid.Column="1" HorizontalAlignment="Left" Margin="10,-2,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" FontSize="20"/>
            <Image x:Name="image" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Source="/EthernetFrameApp;component/Icons/Right-64.png"/>
        </Grid>
        <Grid x:Name="g_content" Margin="0" Grid.Row="1">
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,10" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</UserControl>
