<Window x:Class="EthernetFrameApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EthernetFrameApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" KeyDown="Window_KeyDown" SizeChanged="Window_SizeChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <local:SimpleButton Text="Ethernet Frame" Background="WhiteSmoke"/>
                <local:SimpleButton Text="Tagged Uplink" Grid.Row="2" Background="#FFCDCDCD"/>
                <local:SimpleButton Text="Portbased Tagging" Grid.Row="1" Background="#FFE0E0E0"/>
            </Grid>
            <MediaElement x:Name="mediaElement" Grid.Column="1" Source="C:\Users\Public\Videos\Sample Videos\Natur.wmv"/>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <local:SimpleButton x:Name="bt_close" Text="Beenden" Background="#FFB4B4B4" MouseUp="bt_close_MouseUp" Width="120"/>
        </StackPanel>

    </Grid>
</Window>
