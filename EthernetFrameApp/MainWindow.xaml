<Window x:Class="EthernetFrameApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EthernetFrameApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button x:Name="button1" Content="Ethernet Frame" Style="{DynamicResource ButtonStyle1}"/>
                <Button x:Name="button2" Content="Tagged Uplink" Style="{DynamicResource ButtonStyle1}" Grid.Row="1"/>
                <Button x:Name="button3" Content="Portbased Tagging" Style="{DynamicResource ButtonStyle1}" Grid.Row="2"/>
            </Grid>
            <Frame x:Name="frame" Content="PageFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button x:Name="bt_close" Content="Beenden" Style="{DynamicResource ButtonStyle1}" Grid.Row="2" Click="bt_close_Click" Width="120"/>
            <Button x:Name="bt_settings" Content="Einstellungen" Style="{DynamicResource ButtonStyle1}" Grid.Row="2" Width="120" Click="bt_settings_Click"/>
        </StackPanel>

    </Grid>
</Window>
