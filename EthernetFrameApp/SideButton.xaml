<UserControl x:Class="EthernetFrameApp.SideButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EthernetFrameApp"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" Margin="0" Stroke="Black"/>
        <TextBlock x:Name="textBlock" Margin="0" TextWrapping="Wrap" Text="{Binding Text}" VerticalAlignment="Center" HorizontalAlignment="Center"/>

    </Grid>
</UserControl>
